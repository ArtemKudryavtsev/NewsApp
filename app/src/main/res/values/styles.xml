<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="newsAppText">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="smallGreyText" parent="newsAppText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="itemTitleText" parent="newsAppText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="settingDescriptionText" parent="newsAppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="settingItemText" parent="settingDescriptionText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="newsDetailsContent" parent="newsAppText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
    </style>

    <style name="newsDetailsTitle" parent="newsDetailsContent">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="newsDetailsPublishedTitle" parent="newsDetailsTitle">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
